/* 搜索栏 start */
.headerContainer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  margin: 35rpx 0 25rpx 0rpx;
  padding: 0 40rpx 0 40rpx;
}
.headerContainer .search {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 0rpx;
  width: 100%;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.headerContainer .logo image {
  width: 40rpx;
  height: 40rpx;
}
.headerContainer .search_input {
  /* margin-right: 20upx; */
}
.headerContainer .search input {
  width: 520rpx;
  height: 45rpx;
  padding-left: 10rpx;

  font-size: 14px;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  border: 4rpx solid #757575;
}
.search .search_icon {
  margin-top: 8rpx;
}
.headerContainer image {
  width: 40rpx;
  height: 40rpx;
}
/* 搜索栏 end */
/* 轮播图 start */
swiper {
  margin: 0 auto;
  width: 90%;
  -webkit-border-radius: 10px;
          border-radius: 10px;
  overflow: hidden;
}
swiper-item {
}
swiper-item image {
  width: 100%;
  height: 500rpx;
}
/* 轮播图 end */
/* 功能 start */
.special_column {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  margin-top: 40rpx;
}
.column_item {
  width: 120rpx;
  text-align: center;
  font-size: 14px;
}
.column_item image {
  width: 64rpx;
  height: 64rpx;
}
/* 功能 end */
/* 搜索 start*/
.hot_words {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 100%;
  /* padding: 20upx 65upx 0 65upx; */
  border-top: 5rpx solid #ababab;
  margin-top: 50rpx;
}
.hot_words .hot_title {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 30rpx;
  margin: 30rpx 65rpx 30rpx 65rpx;
}
.hot_words .hot_item {
  width: 86%;
  height: 200rpx;
  margin: 0rpx 0 50rpx 65rpx;
}
.hot_item .item_title {
  font-size: 17px;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.hot_item .item_content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.hot_item .item_content_info {
  width: 70%;
  font-size: 14px;
  overflow: hidden;
  -webkit-line-clamp: 4;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.hot_item .item_content_img {
  /* padding-left: 5upx; */
}
.hot_item .item_content_img image {
  width: 160rpx;
  height: 150rpx;
}
/* 搜索 end */

